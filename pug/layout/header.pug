// Bottom nav
section(class="bottom_nav bg-white py-md-2")
    .container
        div(class="row")
            div(class="col-md-5 m-auto")
                nav(aria-label="breadcrumb")
                    ol(class="breadcrumb bg-white d-flex align-items-center mb-0")
                        li(class="breadcrumb-item") 
                            a(href="/" class="text-muted") الرئيسية
                        li(class="breadcrumb-item active" aria-current="page") 
                            a(href="#" class="border rounded-pill px-3 py-0 text-dark text-center") جميع الموردين
            div(class="col-md-7 m-auto")
                form(action="#", method="post", class="bottom_nav--form mb-md-0 mb-2 w-100")
                    div(class="bottom_nav--form-content ")
                        input(type="text", class="form-control w-100", placeholder="ابحث عن مورد أو منتج")/
                        button(type="submit")
                            i(class="fas fa-search")